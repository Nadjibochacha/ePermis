<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/new_request"
    android:padding="20dp"
    android:background="@color/bg_light">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nouvelle Demande de Permis"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/primary_blue"
        android:layout_marginBottom="24dp"
        tools:ignore="HardcodedText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Type de Projet :"
        tools:ignore="HardcodedText" />

    <Spinner
        android:id="@+id/spinProjectType"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:entries="@array/project_types"
        android:layout_marginBottom="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Adresse du Site :"
        tools:ignore="HardcodedText" />

    <EditText
        android:id="@+id/editAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ex: 15 Rue des FrÃ¨res, Constantine"
        android:inputType="textPostalAddress"
        android:layout_marginBottom="24dp"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/btnSubmitRequest"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Envoyer la Demande"
        android:backgroundTint="@color/primary_blue"
        android:textColor="#FFFFFF"
        tools:ignore="HardcodedText" />

</LinearLayout>